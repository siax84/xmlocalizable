<%= form_for :sync_fields, :url => map_synchronization_path, :html => { :method => :put } do |f| %>
    <h1><%= @synchronization.name %></h1>
    <table class="list">
        <tr>
            <th>Source Field</th>
            <th>Target Field</th>
            <th>Value</th>
        </tr>
    <% @synchronization.mappings.each_with_index do |mapping, index| %>
        <% if field_idx = @synchronization.target_fields.pluck(:id).index(mapping.target_field_id) %>
        <tr>
            <td><%= hidden_field_tag 'index[]', index %>
                <%= hidden_field_tag 'source_field_ids[]', mapping.source_field_id %><%= mapping.source_field.name %></td>
            <td><%= select_tag 'target_field_ids[]', options_from_collection_for_select(@synchronization.target_fields.order(:name), :id, :name_with_line, :selected => @synchronization.target_fields.slice(field_idx).id), :include_blank => true, :class => 'form-control' %></td>
            <td><%= text_field_tag 'common_values[]', mapping.common_value, :class => 'form-control' %></td>
        </tr>    
        <% else %>
        <tr>
            <td><%= hidden_field_tag 'index[]', index %>
                <%= hidden_field_tag 'source_field_ids[]', mapping.source_field_id %><%= mapping.source_field.name %></td>
            <td><%= select_tag 'target_field_ids[]', options_from_collection_for_select(@synchronization.target_fields.order(:name), :id, :name_with_line), :include_blank => true, :class => 'form-control' %></td>
            <td><%= text_field_tag 'common_values[]', mapping.common_value, :class => 'form-control' %></td>
        </tr>  
        <% end %>    
    <% end %>   
    </table>
    <div class="actions">
        <%= f.submit 'Save' %>
    </div>
<% end %>