<p id="notice"><%= notice %></p>

<h2><%= @synchronization.name %></h2>

<div class="row">
<div class="col-md-6">
    <h2>Source Fields</h2>
<table style="border: 1px solid black">
    <thead>
        <tr>
            <th>Attribute Name</th>
       </tr>
    </thead>
    <tbody>
<% @synchronization.source_fields.each do |source| %>
<tr><td><%= source.name %></td></tr>
<% end %>
</tbody>
</table>
</div>
<div class="col-md-6">
<h2>Target Template</h2>
<table style="border: 1px solid black">
    <thead>
        <tr>
            <th>Attribute Name</th>
       </tr>
    </thead>
    <tbody>
<% @synchronization.target_fields.each do |target| %>
<tr><td><%= target.name %></td></tr>
<% end %>
</tbody>
</table>
</div>
</div>
<%= link_to 'Edit', edit_synchronization_path(@synchronization) %> |
<%= link_to 'Back', synchronizations_path %>
