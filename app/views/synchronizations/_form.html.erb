<%= form_with(model: synchronization, local: true) do |form| %>
  <% if synchronization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(synchronization.errors.count, "error") %> prohibited this synchronization from being saved:</h2>

      <ul>
        <% synchronization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
