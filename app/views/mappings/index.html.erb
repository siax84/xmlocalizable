<p id="notice"><%= notice %></p>

<h1>Mappings</h1>

<table>
  <thead>
    <tr>
      <th>Source field</th>
      <th>Target field</th>
      <th>Bidirectional</th>
      <th>Synchronization</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mappings.each do |mapping| %>
      <tr>
        <td><%= mapping.source_field_id %></td>
        <td><%= mapping.target_field_id %></td>
        <td><%= mapping.bidirectional %></td>
        <td><%= mapping.synchronization_id %></td>
        <td><%= link_to 'Show', mapping %></td>
        <td><%= link_to 'Edit', edit_mapping_path(mapping) %></td>
        <td><%= link_to 'Destroy', mapping, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mapping', new_mapping_path %>
